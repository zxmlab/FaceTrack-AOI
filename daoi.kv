#:kivy 2.2.0

Root:
   ## Dynamic AOI Selection
    tabVideos:tabVideos
    tabVideos_chbx_eyemovement_enable:tabVideos_chbx_eyemovement_enable
    tabVideos_txt_eyemovement_input:tabVideos_txt_eyemovement_input
    tabVideos_chbx_video_enable:tabVideos_chbx_video_enable
    tabVideos_txt_video_input:tabVideos_txt_video_input
    tabVideos_chbx_output_enable:tabVideos_chbx_output_enable
    tabVideos_txt_output_path:tabVideos_txt_output_path
    tabVideos_chbx_save_raw_enable:tabVideos_chbx_save_raw_enable
    tabVideos_chbx_save_marked_enable:tabVideos_chbx_save_marked_enable
    tabVideos_video1:tabVideos_video1
    tabVideos_video2:tabVideos_video2
    tabVideos_Button_Process_and_Save:tabVideos_Button_Process_and_Save
    tabVideos_label:tabVideos_label
   ## Image
    tabImage:tabImage
    tabImage_chbx_input_image_enable:tabImage_chbx_input_image_enable
    tabImage_txt_input_image_path:tabImage_txt_input_image_path
    tabImage_chbx_image_column_enable:tabImage_chbx_image_column_enable
    tabImage_txt_image_column:tabImage_txt_image_column
    tabImage_chbx_input_fixation_enable:tabImage_chbx_input_fixation_enable
    tabImage_txt_input_fixation_path:tabImage_txt_input_fixation_path
    tabImage_chbx_output_enable:tabImage_chbx_output_enable
    tabImage_txt_output_path:tabImage_txt_output_path
    tabImage_chbx_save_raw_enable:tabImage_chbx_save_raw_enable
    tabImage_chbx_save_marked_enable:tabImage_chbx_save_marked_enable
    tabImage_image1:tabImage_image1
    tabImage_image2:tabImage_image2
    tabImage_Button_Process_and_Save:tabImage_Button_Process_and_Save
    tabImage_label:tabImage_label

    
    do_default_tab: False


# #### Dynamic Selection ####
    TabbedPanelItem:
        text: 'Video'
        id: tabVideos
        on_press:root.pressed_tabVideos()
        BoxLayout:
            orientation: 'vertical'  
            canvas:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
            BoxLayout:
                size_hint_y: 1                     
                Label:
                    id: tabVideos_label
                    font_size: 40  # 单位px
                    text: "Enter information to start"
                    markup: True                  
            BoxLayout:
                size_hint_y: 4
                Video:
                    id:tabVideos_video1
                    source: 'example_data/videos/M2H_1min.gif'  # JPG图片路径
                    state: 'play'
                    options: {'eos': 'loop'}
                    allow_stretch: True
                Video:
                    id:tabVideos_video2
                    source: 'example_data/videos/M2H_1min_withlandmark.gif'  # JPG图片路径
                    state: 'play'
                    options: {'eos': 'loop'}
                    allow_stretch: True
            BoxLayout: 
                size_hint_y: 1 
                CheckBox:
                    id: tabVideos_chbx_video_enable                    
                    size_hint_x: 1
                    active: False 
                    on_release: root.tabVideos_on_video_checkbox()             
                Label:
                    font_size: 40  # 单位px 
                    text: "Video Stimuli Directory"
                    size_hint_x: 4 
                TextInput: 
                    id: tabVideos_txt_video_input
                    font_size: 40  # 单位px
                    text: "click, then drag and drop"
                    on_focus: root.tabVideos_on_focus_txt_video_input()
                    size_hint_x: 5 
                    disabled:True                                                                                                       
            BoxLayout:
                size_hint_y: 1 
                CheckBox:
                    id: tabVideos_chbx_eyemovement_enable                    
                    size_hint_x: 1
                    active: True 
                    on_release: root.tabVideos_on_eyemovement_checkbox()              
                Label:
                    font_size: 40  # 单位px 
                    text: "Eyemovement Data"
                    size_hint_x: 4
                TextInput: 
                    id: tabVideos_txt_eyemovement_input
                    font_size: 40  # 单位px
                    text: "click, then drag and drop"
                    on_focus: root.tabVideos_on_focus_txt_eyemovement_input()
                    size_hint_x: 5
            BoxLayout:
                size_hint_y: 1
                CheckBox:
                    id: tabVideos_chbx_output_enable                    
                    size_hint_x: 1
                    active: False 
                    on_release: root.tabVideos_on_output_checkbox()             
                Label:
                    font_size: 40  # 单位px
                    text : "Output Directory"
                    size_hint_x: 4
                TextInput:
                    font_size: 40  # 单位px 
                    id: tabVideos_txt_output_path
                    text:'click, then drag and drop'
                    on_focus: root.tabVideos_on_focus_output()
                    size_hint_x: 5 
                    disabled:True
            BoxLayout:
                size_hint_y: 1
                CheckBox:
                    id: tabVideos_chbx_save_raw_enable                    
                    size_hint_x: 1
                    active: True 
                    on_release: root.tabVideos_on_save_raw_checkbox() 
                Label:
                    font_size: 40  # 单位px
                    text : "Save Raw Images"
                    size_hint_x: 4
                CheckBox:
                    id: tabVideos_chbx_save_marked_enable                    
                    size_hint_x: 1
                    active: True 
                    on_release: root.tabVideos_on_save_marked_checkbox() 
                Label:
                    font_size: 40  # 单位px
                    text : "Save Marked Images"
                    size_hint_x: 4                    
            BoxLayout:
                size_hint_y: 1 
                Button:
                    id: tabVideos_Button_Process_and_Save
                    font_size: 40  # 单位px
                    text: "Process and Save"
                    on_press: root.tabVideos_run_Process()
                Button:
                    font_size: 40  # 单位px
                    text: "Exit"
                    on_press: root.clkfunc()


# #### Image ####
    TabbedPanelItem:
        text: 'Image'
        id: tabImage
        on_press:root.tabImage_pressed_tabImage()
        BoxLayout:
            orientation: 'vertical'  
            BoxLayout:
                size_hint_y: 1                     
                Label:
                    id: tabImage_label
                    font_size: 40  # 单位px
                    text: "Enter information to start"
                    markup: True                 
            BoxLayout:
                size_hint_y: 5
                Image:
                    id:tabImage_image1
                    source: 'example_data/images/M2H_frame65.jpg'  # JPG图片路径
                    allow_stretch: True  # 允许拉伸适应布局
                    #keep_ratio: True     # 保持宽高比
                    #size_hint: (1, 1)  # 设置图片大小比例
                    pos_hint: {'center_x': 0.5}  # 水平居中^3^^4^
                Image:
                    id:tabImage_image2
                    source: 'example_data/images/M2H_frame65_output.jpg'  # JPG图片路径
                    allow_stretch: True  # 允许拉伸适应布局
                    #keep_ratio: True     # 保持宽高比
                    #size_hint: (1, 1)  # 设置图片大小比例
                    pos_hint: {'center_x': 0.5}  # 水平居中^3^^4^
            BoxLayout:
                size_hint_y: 1
                CheckBox:
                    id: tabImage_chbx_input_image_enable                    
                    size_hint_x: 1
                    active: False 
                    on_release: root.tabImage_on_input_image_checkbox()             
                Label:
                    font_size: 40  # 单位px
                    text : "Image file Directory"
                    size_hint_x: 4
                TextInput:
                    font_size: 40  # 单位px 
                    id: tabImage_txt_input_image_path
                    text:'click, then drag and drop'
                    on_focus: root.tabImage_on_focus_input_image()
                    size_hint_x: 5 
                    disabled:True 
            BoxLayout:
                size_hint_y: 1
                CheckBox:
                    id: tabImage_chbx_image_column_enable                    
                    size_hint_x: 1
                    active: False 
                    on_release: root.tabImage_on_image_column_checkbox()             
                Label:
                    font_size: 40  # 单位px
                    text : "Image Header"
                    size_hint_x: 4
                TextInput:
                    font_size: 40  # 单位px 
                    id: tabImage_txt_image_column
                    text:'right'
                    on_focus: root.tabImage_on_focus_image_column()
                    size_hint_x: 5 
                    disabled:True 
            BoxLayout:
                size_hint_y: 1
                CheckBox:
                    id: tabImage_chbx_input_fixation_enable                    
                    size_hint_x: 1
                    active: False 
                    on_release: root.tabImage_on_input_fixation_checkbox()             
                Label:
                    font_size: 40  # 单位px
                    text : "Eyemovement file"
                    size_hint_x: 4
                TextInput:
                    font_size: 40  # 单位px 
                    id: tabImage_txt_input_fixation_path
                    text:'click, then drag and drop'
                    on_focus: root.tabImage_on_focus_input_fixation()
                    size_hint_x: 5 
                    disabled:True                                                                                                       
            BoxLayout:
                size_hint_y: 1
                CheckBox:
                    id: tabImage_chbx_output_enable                    
                    size_hint_x: 1
                    active: False 
                    on_release: root.tabImage_on_output_checkbox()             
                Label:
                    font_size: 40  # 单位px
                    text : "Output Directory"
                    size_hint_x: 4
                TextInput:
                    font_size: 40  # 单位px 
                    id: tabImage_txt_output_path
                    text:'click, then drag and drop'
                    on_focus: root.tabImage_on_focus_output()
                    size_hint_x: 5 
                    disabled:True
            BoxLayout:
                size_hint_y: 1
                CheckBox:
                    id: tabImage_chbx_save_raw_enable                    
                    size_hint_x: 1
                    active: True 
                    on_release: root.tabImage_on_save_raw_checkbox() 
                Label:
                    font_size: 40  # 单位px
                    text : "Save Raw Images"
                    size_hint_x: 4
                CheckBox:
                    id: tabImage_chbx_save_marked_enable                    
                    size_hint_x: 1
                    active: True 
                    on_release: root.tabImage_on_save_marked_checkbox() 
                Label:
                    font_size: 40  # 单位px
                    text : "Save Marked Images"
                    size_hint_x: 4  
            BoxLayout:
                size_hint_y: 1
                Button:
                    id: tabImage_Button_Process_and_Save
                    font_size: 40  # 单位px
                    text: "Process and Save"
                    on_press: root.tabImage_run_Process()
                Button:
                    font_size: 40  # 单位px
                    text: "Exit"
                    on_press: root.clkfunc()

                   

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<LoadpathDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: pathchooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(pathchooser.path)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
